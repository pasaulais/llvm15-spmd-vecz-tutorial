\mode<presentation>

% http://bloerg.net/2012/06/21/customizing-the-frametitle-of-beamer-presentation.html

\makeatletter
\setbeamertemplate{frametitle}
{
    \nointerlineskip
    \begin{beamercolorbox}[sep=0.3cm,ht=1.7em,wd=\paperwidth]{frametitle}
        \hspace{0.2\beamer@leftmargin}
        \strut\insertframetitle\strut
        \vskip-0.8ex%
    \end{beamercolorbox}
}
\makeatother

% footer styling
\setbeamercolor{section in footer}{fg=foreground,bg=mediumbg}
\setbeamercolor{subsection in footer}{fg=foreground,bg=mediumbg}
\setbeamercolor{pagenumber in footer}{fg=foreground,bg=mediumbg}

\defbeamertemplate*{footline}{codeplaytheme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.43\paperwidth,ht=2.25ex,dp=1ex,center]{section in footer}%
    \insertauthor, Codeplay Software
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.44\paperwidth,ht=2.25ex,dp=1ex,center]{subsection in footer}%
    \insertsectionhead
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.14\paperwidth,ht=2.25ex,dp=1ex,center]{pagenumber in footer}%
%   \insertframenumber{} / \inserttotalframenumber\hspace*{2ex} 
   \insertframenumber{}
  \end{beamercolorbox}}%
  \vskip0pt%
}

\mode
<all>
